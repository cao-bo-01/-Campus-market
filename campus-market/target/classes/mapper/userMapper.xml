            UPDATE user
            <set>
                <if test="item.username != null">
                    username = #{item.username},
                </if>
                <if test="item.idnumber != null">
                    idnumber = #{item.idnumber},
                </if>
                <if test="item.phone != null">
                    phone = #{item.phone},
                </if>
