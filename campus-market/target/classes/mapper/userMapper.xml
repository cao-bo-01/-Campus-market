            <if test="idnumber != null">
                idnumber = #{idnumber},
            </if>
            <if test="phone != null">
                phone = #{phone},
            </if>
            <if test="sex != null">
                sex = #{sex},
            </if>
            <if test="account != null">
                account = #{account},
            </if>
            <if test="password != null">
                password = #{password},
            </if>
            <if test="regtime != null">
                regtime = #{regtime},
            </if>
