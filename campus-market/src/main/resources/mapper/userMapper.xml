<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- user -->
<mapper namespace="domain.User">
    <!-- This code was generated by TableGo tools, mark 1 begin. -->
    <!-- 字段映射 -->
    <resultMap id="userMap" type="domain.User">
        <result column="name" property="name" jdbcType="VARCHAR" />
        <result column="age" property="age" jdbcType="INTEGER" />
        <result column="sex" property="sex" jdbcType="INTEGER" />
    </resultMap>
    <!-- This code was generated by TableGo tools, mark 1 end. -->

    <!-- This code was generated by TableGo tools, mark 2 begin. -->
    <!-- 表查询字段 -->
    <sql id="allColumns">
        u.name, u.age, u.sex
    </sql>
    <!-- This code was generated by TableGo tools, mark 2 end. -->

    <!-- 查询所有 -->
    <select id="findUserAll" resultMap="userMap">
        SELECT
            <include refid="allColumns" />
        FROM user u
    </select>

    <!-- 根据条件参数查询列表 -->
    <select id="findUserByCondition" resultMap="userMap" parameterType="map">
        SELECT
            <include refid="allColumns" />
        FROM user u WHERE 1 = 1
        <if test="name != null and name != ''">
            AND u.name LIKE CONCAT('%', #{name}, '%')
        </if>
        <if test="age != null">
            AND u.age = #{age}
        </if>
        <if test="sex != null">
            AND u.sex = #{sex}
        </if>
    </select>



    <!-- 新增信息 -->
    <insert id="addUser">
        INSERT INTO user (
            name, age, sex
        ) VALUES (
            #{name},
            #{age},
            #{sex}
        )
    </insert>

    <!-- 批量新增信息 -->
    <insert id="addUsers" parameterType="list">
        INSERT INTO user (
            name, age, sex
        ) VALUES
        <foreach collection="list" index="index" item="item" separator=",">
            (
                #{item.name},
                #{item.age},
                #{item.sex}
            )
        </foreach>
    </insert>



    <!-- 批量修改信息 -->
    <update id="updateUsers" parameterType="list">
        <foreach collection="list" index="index" item="item" separator=";">
            UPDATE user
            <set>
                <if test="item.name != null">
                    name = #{item.name},
                </if>
                <if test="item.age != null">
                    age = #{item.age},
                </if>
                <if test="item.sex != null">
                    sex = #{item.sex}
                </if>
            </set>
            WHERE  = #{item.}
        </foreach>
    </update>



</mapper>